<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    <title>Home</title>
    <script src="https://kit.fontawesome.com/ce75bd9e29.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/static/css/index.css">
    {{!-- <style>
        button {
            cursor: pointer;
        }
    </style> --}}
</head>

<body>
    <div id="firstSection">
        {{>navbar}}
        <section>
            <div class="container">
                <div class="painel">
                    <p id="work" onclick="setWork()">Work</p>
                    <p id="break" onclick="setShortBreak()">Short Break</p>
                    <p id="longbreak" onclick="setLongBreak()">Long Break</p>
                </div>


                <div class="timer">
                    <div class="circle">
                        <div class="time">
                            <p id="minutes"></p>
                            <p>:</p>
                            <p id="seconds"></p>
                        </div>
                    </div>
                </div>
                <div class="controls">
                    <button id="start" onclick="start()"><i class="fa-solid fa-play"></i></button>
                    <button id="pause" onclick="pause()"><i class="fa-solid fa-pause"></i></button>
                    <a id="reset" href="./"><i class="fa-solid fa-arrow-rotate-left"></i></a>
                </div>
            </div>
            <div class="rightSpace">
                <div class="hero">
                    <div class="calendar">
                        <div class="left">
                            <p id="date">01</p>
                            <p id="day">Sunday</p>
                        </div>
                        <div class="right">
                            <p id="month">January</p>
                            <p id="year">2020</p>

                        </div>
                    </div>
                </div>
                <div class="todo-app">
                    <h2>#Tasks</h2>
                    <div class="row">
                        <input type="text" id="input-box" placeholder="Add your Task">
                        <button onclick="addTask()">Add</button>
                    </div>
                    <ul id="list-container">
                        <li class="checked" data-task-id="1">Task 1</li>

                    </ul>
                </div>

            </div>
        </section>
    </div>
    <section id="secondSection">
        <div class="secondSpace">
            <div class="text">
                <h2>Notes</h2>
                <p>*To delete the note double click on the notespace</p>
            </div>
            <div id="app">
                <button class="add-note" type="button">+</button>
            </div>
        </div>
        <!-- <div id="app">
        <button class="add-note" type="button">+</button>
    </div> -->
</body>

</section>
<script src="/static/js/index.js"></script>
<script src="/static/js/calender.js"></script>
<script src="/static/js/todoList.js"></script>

<script src="/static/js/stickyNotes.js"></script>
</body>

</html>